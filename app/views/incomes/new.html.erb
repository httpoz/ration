<%= form_for @income, url: budget_incomes_path do |f| %>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label :amount %>
    <%= f.text_field :name, class: 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label :monthly, "Repeats monthly?" %>
    <%= f.check_box :monthly, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit :submit, class: 'btn btn-block btn-primary' %>
  </div> 
  
<% end %>