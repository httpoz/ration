<%= form_tag budget_expenses_path, method: :get do %>
  <%= label_tag 'Sort by' %>
  <%= select_tag :order_by,
    options_for_select([
      ['Category', :category_id],
      ['Expense name', :name],
      ['Amount', :amount],
      ['Date', :date],
      ['Date of input', :created_at]],
      params[:order_by] )%>
  
  <%= radio_button_tag :direction, 'asc', params[:direction] == 'asc' %>
  <%= label_tag :direction_up, 'Rising' %>
  <%= radio_button_tag :direction, 'desc', params[:direction] == 'desc' %>
  <%= label_tag :direction_down, 'Falling' %>
      
  <%= submit_tag 'Submit', name: nil, class: 'btn' %>
<% end %>