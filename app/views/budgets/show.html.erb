<div class="row">
  <aside class="col-md-2">
    <h3 class="text-center">See all expenses</h3>
    <%= link_to "Expenses list", budget_expenses_path(@budget), class: "btn btn-primary btn-block" %>
  </aside>
  <div class="col-md-8 budget-form">
    <h1 class="text-center"><%= @budget.name %></h1>
    
    <% if !@categories.empty? %>
      <h6> Add expenses by clicking one of your categories</h6>
      <%= render 'spreadsheet' %> 
      <h6>Create expense in a new category</h6>
      <%= link_to "New expense", new_budget_expense_path(@budget.id), class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Create your first expense", new_budget_expense_path(@budget.id), class: "btn btn-primary" %>
    <% end %>
  </div>
  
</div>