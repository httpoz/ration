<table class="budget-table">
  <thead>
    <tr>
      <th>Categorys</th>
      <th>Jan</th>
      <th>Feb</th>
      <th>Mar</th>
      <th>Apr</th>
      <th>May</th>
      <th>Jun</th>
      <th>Jul</th>
      <th>Aug</th>
      <th>Sep</th>
      <th>Oct</th>
      <th>Nov</th>
      <th>Dec</th>
    </tr>
  </thead>
    
  <tbody>
    <!--Loops over a categorys array to create corresponding table data-->
    <% @budget.categories.each do |category| %>
      <tr>
        <td class="category-field">
          <%= link_to category.name, new_budget_expense_path(@budget, category: category.id) %>
        </td>
        <!-- Creates a <td> for each 12 months containing total expense amount -->
        <% 12.times do |month_number| %>
          <td id="<%= "#{category.name}  #{month_number}" %>">
            <!--passes month and category name to helper method-->
            <%= calculate_monthly(category.name, (month_number + 1)) %>
          </td>
        <% end %>
      </tr>
    <% end %>
   </tbody>
</table>
